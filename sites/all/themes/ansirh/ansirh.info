; Theme info
name = 'ansirh'
description = This is a subtheme of Themebrain's TB University theme developed for ANSIRH. Requires both <a href="http://www.themebrain.com/drupal-theme/tb-university">TB University</a> and <a href="http://drupal.org/project/nucleus">Nucleus</a> base theme.
core = '7.x'
engine = 'phptemplate'
base theme = 'tb_university'
screenshot = 'screenshot.png'

; Stylesheets
stylesheets[all][] = 'css/tb-megamenu/tb-university.css'
stylesheets[all][] = 'css/fonts.css'
stylesheets[all][] = 'css/ansirh.css'
